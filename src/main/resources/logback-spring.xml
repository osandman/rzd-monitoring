<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>
                %white(%d{dd-MMM HH:mm:ss.SSS}) %highlight(%-5level) [%cyan(%thread)] %yellow(%logger{16}#%M): %msg%n%ex{15}
            </Pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>